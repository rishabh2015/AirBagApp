<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lost_suitcase">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/viewfinder_mask">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:id="@+id/radiogroup1"
        >
        <RadioButton
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/radiobutton1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radiobuttonbackground"
            android:color="@android:color/transparent"
            android:text="CheckPoint1"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            />
        <RadioButton
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/radiobutton2"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radiobuttonbackground"
            android:color="@android:color/transparent"
            android:text="CheckPoint2"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"/>
        <RadioButton
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/radiobutton3"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radiobuttonbackground"
            android:color="@android:color/transparent"
            android:text="Checkpoint3"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"/>
        <RadioButton
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/radiobutton4"
            android:background="@drawable/radiobuttonbackground"
            android:color="@android:color/transparent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="CheckPoint4"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Save Status"
        android:id="@+id/buttonSaveSatus"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/radiogroup1"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Report a Lost Item"
        android:id="@+id/ReportLostItem"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/radiogroup1"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        android:layout_marginTop="30dp"
        />
        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Report a Suspicious Item"
            android:id="@+id/ReportaSuspiciousItem"
            android:background="@color/colorPrimary"
            android:layout_below="@id/ReportLostItem"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>