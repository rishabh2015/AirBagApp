<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/BagTypeLayout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_BagType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:singleLine="true"
            android:textSize="20sp"
            android:hint="Bag Type"/>
    </android.support.design.widget.TextInputLayout>






    <android.support.design.widget.TextInputLayout
        android:id="@+id/BagNameLayout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_BagName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:singleLine="true"
            android:textSize="20sp"
            android:hint="Bag Name"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/BagColorLayout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_BagColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:singleLine="true"
            android:textSize="20sp"
            android:hint="Bag Color"/>
    </android.support.design.widget.TextInputLayout>




    <android.support.design.widget.TextInputLayout
        android:id="@+id/BagBrandLayout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_BagBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:singleLine="true"
            android:textSize="20sp"
            android:hint="Bag Brand"/>
    </android.support.design.widget.TextInputLayout>
    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_gravity="right"
        android:paddingTop="20dp">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fab1"
        android:background="@drawable/plus"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/finalbutton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="Save"
            android:textColor="#FFF" />
    </RelativeLayout>

</LinearLayout>